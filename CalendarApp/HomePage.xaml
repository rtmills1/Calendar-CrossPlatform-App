<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="CalendarApp.HomePage" Title="Home Page">

    <ContentPage.Content>
        
        <StackLayout Padding="60"> 
            <Label x:Name="currentTime"> <Label.FontFamily>
        <OnPlatform x:TypeArguments="x:String">
            <OnPlatform.iOS>Futura-Medium</OnPlatform.iOS>
            <OnPlatform.Android>Roboto-Italic</OnPlatform.Android>
        </OnPlatform>
    </Label.FontFamily></Label>
        <Button Text="Calendar Page" TextColor="White"
                BackgroundColor="#24BDFF"
                BorderColor="#006996"
                BorderWidth="1"
                BorderRadius="3" Clicked="NavigateButton_OnClicked">></Button>
        <Button Text="Add New Date" TextColor="White"
                BackgroundColor="#24BDFF"
                BorderColor="#006996"
                BorderWidth="1"
                BorderRadius="3" Clicked="NavigateButton_OnClicked1"></Button>
        </StackLayout> 
	</ContentPage.Content>
</ContentPage>
